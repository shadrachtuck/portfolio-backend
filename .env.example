# WordPress Environment Configuration
# Copy this file to .env.local for local development or .env.production for production

# Environment (development, production)
WP_ENV=development

# Database Configuration
DB_NAME=local
DB_USER=root
DB_PASSWORD=root
DB_HOST=localhost
DB_CHARSET=utf8mb4
DB_COLLATE=

# WordPress URLs
WP_HOME=http://portfolio-backend.local
WP_SITEURL=http://portfolio-backend.local

# Security Keys (generate new ones for production)
# Get from: https://api.wordpress.org/secret-key/1.1/salt/
AUTH_KEY=put your unique phrase here
SECURE_AUTH_KEY=put your unique phrase here
LOGGED_IN_KEY=put your unique phrase here
NONCE_KEY=put your unique phrase here
AUTH_SALT=put your unique phrase here
SECURE_AUTH_SALT=put your unique phrase here
LOGGED_IN_SALT=put your unique phrase here
NONCE_SALT=put your unique phrase here

# Debug Settings (development only)
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=true
SCRIPT_DEBUG=true

# Performance
WP_MEMORY_LIMIT=256M
WP_MAX_MEMORY_LIMIT=512M

# Security (production only)
DISALLOW_FILE_EDIT=false
FORCE_SSL_ADMIN=false
